class food:
    def __init__(self):
        self.name = input("Enter item name")
        self.quantity = input("""Enter quantity(in units) :""")
        while True
            Try:
                self.price = int(input("Enter price))
                break
            except valueError:
                print("Price must be in digits")
        global food_list
        restaurant.food_list.append(self)
    def __repr__(self):
        return f"{self.name}({self.quantity}) [INR {self.price}]"
   
